{% extends 'base.html.twig' %}

{% block title %}Hello PostController!{% endblock %}

{% block body %}

<div class="example-wrapper">
    <h1>Tous les articles</h1>

    {% for post in posts%}
        <ul>
            <li><a href="{{ path('blog_show', {'slug': post.slug }) }}">{{ post.title }}</a>
            </li>
        </ul>
    {% endfor %}
</div>
{% endblock %}
